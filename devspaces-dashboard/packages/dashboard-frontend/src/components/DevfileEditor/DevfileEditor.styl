.devfile-editor
  width 100%
  height 100%
  min-height 50vh
  .monaco
    position relative
    width 100%
    height calc(100% - 38px)
    min-height inherit
    .monaco-editor
      border 1px solid #cecece
      position absolute
      top 0
      left 0
      right 0
      bottom 0
    .devfile-editor-decoration
      background-color alpha(#f1c050, 0.5)
  .error
    color #e22812
    font-size 15px
    height 16px
  a
    color #3782c4
    font-size 15px
    line-height 25px
    text-decoration none
