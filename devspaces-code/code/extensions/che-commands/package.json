{
  "name": "commands",
  "displayName": "%displayName%",
  "description": "%description%",
  "publisher": "eclipse-che",
  "license": "EPL-2.0",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "icon": "images/eclipse-che-logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "gulp compile-extension:che-commands",
    "watch": "gulp watch-extension:che-commands",
    "vscode:prepublish": "npm run compile",
    "test": "jest",
    "lint:fix": "eslint --fix --cache=true --no-error-on-unmatched-pattern=true \"{src,tests}/**/*.{ts,tsx}\""
    },
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "fs-extra": "^11.2.0",
    "vscode-nls": "^5.0.0",
    "js-yaml": "^4.1.0",
    "@devfile/api": "^2.3.0-1723034342"
  },
  "devDependencies": {
    "jest": "27.3.1",
    "ts-jest": "27.0.7",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "20.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/che-incubator/che-code.git"
  },
  "extensionDependencies": [
    "eclipse-che.api",
    "eclipse-che.terminal"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "contributes": {
    "taskDefinitions": [
      {
        "type": "devfile",
        "required": [
          "command"
        ],
        "properties": {
          "command": {
            "type": "string",
            "description": "Command Line"
          },
          "workdir": {
            "type": "string",
            "description": "Current Working Directory"
          },
          "component": {
            "type": "string",
            "description": "Target Container"
          }
        },
        "when": "customExecutionSupported"
      }
    ]
  }
}
