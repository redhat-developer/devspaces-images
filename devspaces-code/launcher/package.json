{
  "name": "che-code-launcher",
  "publisher": "eclipse-che",
  "version": "0.0.1",
  "private": false,
  "description": "Configure and launch VS Code",
  "main": "out/entrypoint.js",
  "bin": "out/entrypoint.js",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "files": [
    "out",
    "src"
  ],
  "scripts": {
    "prepare": "npm run clean && npm run build",
    "clean": "rimraf lib",
    "build": "npm run format && npm run compile && npm run lint && npm run test",
    "compile": "tsc --project .",
    "format": "prettier --check '{src,tests}/**/*.ts' package.json",
    "format:fix": "prettier --write '{src,tests}/**/*.ts' package.json",
    "lint": "eslint --cache=true --no-error-on-unmatched-pattern=true '{src,tests}/(!model|**)/*.ts'",
    "lint:fix": "eslint --fix --cache=true --no-error-on-unmatched-pattern=true \"{src,tests}/(!model|**)/*.{ts,tsx}\"",
    "test": "jest --forceExit",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/che-incubator/che-code.git"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "eslint": "^7.14.0",
    "jest": "29.7.0",
    "jest-esm-transformer": "^1.0.0",
    "prettier": "^2.2.0",
    "ts-jest": "29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.6.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "jest-esm-transformer"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/out"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  }
}
